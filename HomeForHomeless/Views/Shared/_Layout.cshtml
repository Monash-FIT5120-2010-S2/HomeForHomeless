<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Envision a Green Life</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar bg-light navbar-light navbar-expand-lg">
        <div class="container">

            <a href="index.html" class="navbar-brand">
                <img src="~/Images/logo.png"
                     alt="Logo" title="Logo">
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarResponsive">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="@Url.Action("Index","Home")" class="nav-link
					active">Home</a>
                    </li>
                    <li class="nav-item"><a href="@Url.Action("Index","freeServices")" class="nav-link">FreeService</a></li>
                    <li class="nav-item"><a href="~/select/selection/select.html" class="nav-link">Volunteer</a></li>
                    <li class="nav-item"><a href="@Url.Action("Visualisation","Home")" class="nav-link">HomelessInVIC</a></li>
                    <li class="nav-item"><a href="@Url.Action("Quiz","Home")" class="nav-link">Quiz</a></li>
                </ul>
            </div>

        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="footer">
                <div class="container">
                    <div class="text-block-2"><strong class="bold-text">© 2020 - Home For Homeless</strong></div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/Scripts/all.min.js"></script>
    <!-- jQuery -->
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap 4.5 JS -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Popper JS -->
    <script src="~/Scripts/esm/popper.min.js"></script>
    <!-- Font Awesome -->
    <script src="~/Scripts/all.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
