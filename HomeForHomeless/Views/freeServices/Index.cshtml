@using PagedList.Mvc
@model  HomeForHomeless.ViewModel.FreeServiceList

@{
    var serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
    ViewBag.Title = "FreeServices";
    Layout = "~/Views/Shared/_Layout.cshtml";}

@*<h2>FreeServices</h2>*@
<link href="~/Content/detail_pop_up.css" rel="stylesheet" />
<body>
    <div class="content">
        <div class="wrap">
            <div class="page-headline-wrap cc-category-headline">
                <h1 class="heading-7">Free Services</h1>
                <p class="big-paragraph">A WAY TO HELP YOU</p>
                <hr>
            </div>
            <div data-animation="slide" data-nav-spacing="5" data-duration="500" data-infinite="1" class="slider w-slider">
                <div class="w-slider-mask">
                    <div class="w-slide">
                        <div class="w-dyn-list">
                            <div role="list" class="w-dyn-items">
                                <div role="listitem" class="w-dyn-item">
                                    <div class="slide-wrap">
                                        <div class="slider-image-wrap">

                                            <div class="slide1-product-slider" style="        background-image: url(../images/Amy.jpg);"></div>
                                        </div>
                                        <div class="slider-text-wrap">
                                            <div class="slide-content">
                                                <h2>Kindness can transform someone’s dark moment with a blaze of light. You’ll never know how much your caring matters. Make a difference for another today.</h2>
                                                <p id="w-node-1851e34e161e-0dc7b219" class="paragraph">-Amy Leigh Mercree</p>
                                            </div>
                                            @*<a href="https://amyleighmercree.com/" target="_blank" class="dark-button w-inline-block">
                                                    <div>Link to <strong><em>Personal Website</em></strong></div>
                                                </a>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="w-slide">
                        <div class="slide-wrap">
                            <div class="slider-image-wrap">
                                <div class="slide-image cc-slider-image-2"></div>
                            </div>
                            <div class="slider-text-wrap">
                                <div class="slide-content">
                                    <h2><em>Every man must decide whether he will walk in the light of creative altruism or in the darkness of destructive selfishness.</em></h2>
                                    <p id="w-node-1851e34e162a-0dc7b219" class="paragraph">-<strong>Martin Luther King, Jr.</strong></p>
                                </div>
                                @*<a href="https://en.wikipedia.org/wiki/Martin_Luther_King_Jr." target="_blank" class="dark-button w-inline-block">
                                        <div>Link to <strong><em>Wikipedia</em></strong></div>
                                    </a>*@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="left-arrow w-slider-arrow-left"><img src="~/images/Arrow_1Arrow.png" width="12" alt=""></div>
                <div class="right-arrow w-slider-arrow-right"><img src="~/images/Arrow-R_1Arrow-R.png" width="12" alt=""></div>
                <div class="slide-nav w-slider-nav w-slider-nav-invert w-round"></div>
            </div>
        </div>
    </div>

    <div class="col-12 text-center mt-5">
        <h1 class="text-dark pt4">Available Services</h1>
        <div class="border-top border-primary w-25 mx-auto my03"></div>
        <p class="lead">Free services near you</p>
    </div>
    <div class="col-12 text-center mt-5">
        <form asp-action="Index" method="get" class="form-inline row justify-content-center">
            <input type="search" class="form-control mr-sm-2" maxlength="256" name="SearchString" value="@ViewData["currentFilter"]" placeholder="Services Name/Suburb" id="search" required="" aria-label="Search">
            <button class="btn aqua-gradient btn-rounded btn-sm my-0" type="submit" style="border:solid">FIND NOW</button>
        </form>
    </div>


    @* iterative code to display all the appliance in database in grids of cards.  *@

    <div class="container">
        @if (Model != null)
        {
            <div class="row">
                @foreach (var item in Model.freeServices)
                {
                    <div class="col-md-4 my-4" style="text-align:center;">
                        <img src="~/images/food2.jpg" alt="" class="w-100">

                        <div class="h4 my-4">
                            @item.Name
                        </div>
                        <p>
                            @item.Address
                        </p>
                        <input type="button" onclick="freeServicePopUp(@serializer.Serialize(item))" value="see more" style="border:1px solid black;" class="btn btn-outline-dark btn-md" />
                        @*<a href="@Url.Action("Details", "freeServices",new { id = @item.service_Id})" class="btn btn-outline-dark btn-md">See More</a>*@
                        @*<a href='javascript:;' onclick="freeServicePopUp()" class="btn btn-outline-dark btn-md">See More</a>*@
                    </div>
                }
            </div>
        }
    </div>

    <div style="opacity:0" class="popup" id="fspopup">
        <div data-w-id="04556d3a-b909-e374-d452-f5e9fc9bf975" style="display:block;opacity:1" class="div-block-3">
            <div class="div-block-4">
            <img src="~/images/Cart-Close-Icon_1Cart-Close-Icon.png" loading="lazy" data-w-id="75537ccf-64c6-c9e6-6693-1d44302236d9" style="cursor:pointer;" alt="" class="image-4" onclick="closepopup()">
            </div>
            <h1 class="heading-9" id="name">Free services Center</h1>
            <div class="office-info">
                @*<p class="paragraph" id="name">Name:</p>*@
                <p class="paragraph" id="address">Address:</p>
                <p class="paragraph" id="suburb">Suburb:</p>
                <p class="paragraph" id="phoneno">Phone Number</p>
                <p class="paragraph" id="website"><strong>Website: </strong><a></a></p>
                <p class="paragraph" id="tram">Tram Routes</p>
                <p class="paragraph" id="services">Main Services:</p>
            </div><a data-w-id="86e0d03c-58b5-bb88-42de-35fd8c7efaf0" target="_blank" id="map" href="#" class="button w-button">Find the location</a>
        </div>
    </div>

    <br>
    <br>

    @* code to display page count based on the data in the database. *@

    <div class="pagecount" style="margin:auto; text-align:center">
        Page @(Model.freeServices.PageCount < Model.freeServices.PageNumber ? 0 : Model.freeServices.PageNumber)
        of @Model.freeServices.PageCount   @Html.PagedListPager(Model.freeServices, page => Url.Action("Index", new { page, currentfilter = ViewBag.currentfilter }))
    </div>
</body>

<script>
    //document.getElementById("").addEventListener("click", showPopUp);
    function freeServicePopUp(jsonData) {
        document.getElementById("fspopup").style.opacity = 1;
        document.getElementById("fspopup").style.display = "block";
        document.getElementById("fspopup").style.top = 0;
        document.getElementById("fspopup").style.left = 0;
        document.getElementById("name").innerHTML = jsonData.Name;
        document.getElementById("address").innerHTML = "<strong>Address: </strong>" + jsonData.Address;
        document.getElementById("suburb").innerHTML = "<strong>Suburb: </strong>" + jsonData.Suburb;
        document.getElementById("phoneno").innerHTML = "<strong>Phone: </strong>" + jsonData.Phone;
        if (document.getElementById("website").hasChildNodes)
        { document.getElementById("website").removeChild(document.getElementById("website").lastChild) }
        var a = document.createElement('a');
        var linkText = document.createTextNode(jsonData.Website);
        a.appendChild(linkText);
        a.title = jsonData.Website;
        a.href = "http://" + jsonData.Website;
        document.getElementById("website").appendChild(a);
        document.getElementById("tram").innerHTML = "<strong>Tram Routes: </strong>" + jsonData.Tram_routes;
        document.getElementById("services").innerHTML = "<strong>Main Services: </strong>" + jsonData.Category;
        document.getElementById("map").href = "/freeServices/Details/" + jsonData.service_Id;
    }

    function closepopup() {
        document.getElementById("fspopup").style.opacity = 0;
        document.getElementById("fspopup").style.display = "none";
    }
</script>