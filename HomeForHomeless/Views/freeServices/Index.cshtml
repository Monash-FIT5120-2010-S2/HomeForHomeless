@using PagedList.Mvc
@model  HomeForHomeless.ViewModel.FreeServiceList

@{
    var serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
    ViewBag.Title = "FreeServices";
    Layout = "~/Views/Shared/_Layout.cshtml";}

@*<h2>FreeServices</h2>*@
@*<link href="~/Content/detail_pop_up.css" rel="stylesheet" />*@
<style>
    .free-service-dropdown {
        border: 1px solid rgba(113, 148, 144, 0.5);
        margin-right: 1%;
    }
    .property-image-wrap {
        height:50%;
    }
    .free-service-dropdown {
        min-height: 52px;
        padding-top: 16px;
        padding-bottom: 16px;
        padding-left: 20px;
        padding-right: 20px;
        border-radius: 50px;
        background-color: #f6f6f6;
    }
    .filter-wrap {
        margin-bottom: 48px;
        padding: 42px;
        border-radius: 20px;
        background-color: #fff;
        box-shadow: 8px 80px 55px -50px rgba(0, 0, 0, 0.13);
    }

    .itemcontent {
        width:auto;
    }
</style>
<body>
    <div  data-w-id="eb106516-8133-4cfd-47d6-1eb8172e08df" class="col-12 text-center" id="firstelement" style="display:none;">
        <h1 data-w-id="d25fccb8-3525-aa4f-247c-4304203d6ac1" class="covid19sectiontitle-2" style="text-align:center">Free ‍<span class="brand-span">Services</span></h1>

        @*<h1 class="text-dark pt4">Available Services</h1>*@
        <div class="border-top border-primary w-25 mx-auto my03"></div>
        <p class="lead">Find all the free services available to the homeless community from our list below. </p>
    </div>
    <div class="col-12 text-center mt-3 filter-wrap">
        <form asp-action="Index" method="get" class="form-inline row justify-content-center">
                <input type="search" class="mt-2 free-service-dropdown btn aqua-gradient btn-rounded btn-sm" style="text-align:left;" maxlength="256" name="SearchString" value="@ViewData["currentFilter"]" placeholder="Suburb/Name" id="search" aria-label="Search">
                @Html.DropDownList("Category", null, htmlAttributes: new { @class = "mt-2 free-service-dropdown btn aqua-gradient btn-rounded btn-sm" })
                <button class="mt-2 free-service-dropdown btn aqua-gradient btn-rounded btn-sm" type="submit">FIND NOW</button>
        </form>
    </div>


    @* iterative code to display all the appliance in database in grids of cards.  *@
    <div class="container-2 mt-5">
        @if (Model != null)
        {
            <div class="w-layout-grid grid-9" style="text-align: center;">
                @foreach (var item in Model.freeServices)
                {
                <div class="item-card">
                    @{ if (item.Category.Equals("Accommodation") || item.Category.Equals("Clothes and Blankets") || item.Category.Equals("Food")
                                      || item.Category.Equals("Showers / Laundry") || item.Category.Equals("Tenancy Assistance"))
                        {
                            switch (item.service_Id % 4)
                            {
                                case 1:
                                    <div class="property-image-wrap">
                                        <img src="~/Images/fs-food1.png" loading="lazy" alt="BasicNecessities" class="itemimage">
                                    </div>
                                    break;
                                case 2:
                                    <div class="property-image-wrap">
                                        <img src="~/Images/fs-food2.png" loading="lazy" alt="BasicNecessities" class="itemimage">
                                    </div>
                                    break;
                                case 3:
                                    <div class="property-image-wrap">
                                        <img src="~/Images/fs-food3.png" loading="lazy" alt="BasicNecessities" class="itemimage">
                                    </div>
                                    break;
                                case 0:
                                    <div class="property-image-wrap">
                                        <img src="~/Images/fs-food4.png" loading="lazy" alt="BasicNecessities" class="itemimage">
                                    </div>
                                    break;
                            }
                        }
                        else
                                         if (item.Category.Equals("Counselling and Psychiatric Services") || item.Category.Equals("Drug and Alcohol") || item.Category.Equals("Health Services / Pharmacy")
                                         || item.Category.Equals("Hospitals / Emergency") || item.Category.Equals("Needle Exchange"))
                        {
                            switch (item.service_Id % 9)
                            {
                                case 1:
                                    <div class="property-image-wrap">
                                        <img src="~/Images/fs-health1.png" loading="lazy" alt="HealthServices" class="itemimage">
                                    </div>
                                    break;
                                case 2:
                                    <div class="property-image-wrap">
                                        <img src="~/Images/fs-health2.png" loading="lazy" alt="HealthServices" class="itemimage">
                                    </div> break;
                                case 3:
                                    <div class="property-image-wrap">
                                        <img src="~/Images/fs-health3.png" loading="lazy" alt="HealthServices" class="itemimage">
                                    </div> break;
                                case 4:
                                    <div class="property-image-wrap">
                                        <img src="~/Images/fs-health4.png" loading="lazy" alt="HealthServices" class="itemimage">
                                    </div> break;
                                case 5:
                                    <div class="property-image-wrap">
                                        <img src="~/Images/fs-health5.png" loading="lazy" alt="HealthServices" class="itemimage">
                                    </div> break;
                                case 6:
                                    <div class="property-image-wrap">
                                        <img src="~/Images/fs-health6.png" loading="lazy" alt="HealthServices" class="itemimage">
                                    </div> break;
                                case 7:
                                    <div class="property-image-wrap">
                                        <img src="~/Images/fs-health7.png" loading="lazy" alt="HealthServices" class="itemimage">
                                    </div> break;
                                case 8:
                                    <div class="property-image-wrap">
                                        <img src="~/Images/fs-health8.png" loading="lazy" alt="HealthServices" class="itemimage">
                                    </div> break;
                                case 0:
                                    <div class="property-image-wrap">
                                        <img src="~/Images/fs-health9.png" loading="lazy" alt="HealthServices" class="itemimage">
                                    </div> break;
                            }
                        }
                        else
                        {
                            switch (item.service_Id % 3)
                            {
                                case 1:
                                    <div class="property-image-wrap">
                                        <img src="~/Images/fs-employ1.png" loading="lazy" alt="EmployAssistance" class="itemimage">
                                    </div>
                                    break;
                                case 0:
                                    <div class="property-image-wrap">
                                        <img src="~/Images/fs-employ2.png" loading="lazy" alt="EmployAssistance" class="itemimage">
                                    </div>
                                    break;
                                case 2:
                                    <div class="property-image-wrap">
                                        <img src="~/Images/charity1.jpg" loading="lazy" alt="OtherServices" class="itemimage">
                                    </div>
                                    break;
                            }
                        }
                    }
                    <div class="property-content" style="height:120px;">
                        <h5>@item.Name</h5>
                        <div>@item.Address</div>
                    </div>
                    <input type="button" onclick="freeServicePopUp(@serializer.Serialize(item))" value="Learn More" class="itembutton w-button" style="margin-left:auto;"/>
                    @*<a href="@Url.Action("Details", "freeServices",new { id = @item.service_Id})" class="btn btn-outline-dark btn-md">See More</a>*@
                    @*<a href='javascript:;' onclick="freeServicePopUp()" class="btn btn-outline-dark btn-md">See More</a>*@
                </div>
                }
            </div>
        }
    </div>

    <div style="opacity:0" class="popup" id="fspopup">
        <div data-w-id="04556d3a-b909-e374-d452-f5e9fc9bf975" style="display:block;opacity:1" class="div-block-3">
            <div class="div-block-4">
                <div class="closebutton"><img src="~/images/Cart-Close-Icon_1Cart-Close-Icon.png" loading="lazy" data-w-id="001e3862-a1b8-0709-b79d-2d95544be38f" alt="" class="image-4" style="cursor:pointer;" onclick="closepopup()"></div>
            </div>
            <h3 class="heading-9">Free services Center</h3>
            <div class="iteminformation mt-5">
                <div class="office-info" style="margin: -20px auto auto">
                    <div class="itemdetails">
                        <p class="paragraph itemcontent" id="name">Name:</p>
                        <p class="paragraph itemcontent" id="address">Address:</p>
                        <p class="paragraph itemcontent" id="suburb">Suburb:</p>
                        <p class="paragraph itemcontent" id="phoneno">Phone Number</p>
                        <p class="paragraph itemcontent" id="website"><strong>Website:&nbsp;</strong><a></a></p>
                        <p class="paragraph itemcontent" id="tram">Tram Routes</p>
                        <p class="paragraph itemcontent" id="services">Main Services:</p>
                    </div>
                </div>
            </div>
            <input type="button" onclick="closepopup()" value="OK" class="button-8 w-button" style="padding-top: 10px; padding-right: 10%; padding-bottom: 10px; padding-left: 10%;" />
            @*<a data-w-id="86e0d03c-58b5-bb88-42de-35fd8c7efaf0" target="_blank" id="map" href="#" class="button-8 w-button">Find the location</a>*@
        </div>
    </div>

    <br>
    <br>

    @* code to display page count based on the data in the database. *@

    <div class="pagecount" style="margin:auto; text-align:center">
        Page @(Model.freeServices.PageCount < Model.freeServices.PageNumber ? 0 : Model.freeServices.PageNumber)
        of @Model.freeServices.PageCount   @Html.PagedListPager(Model.freeServices, page => Url.Action("Index", new { page, currentfilter = ViewBag.currentfilter, currentCategory = ViewBag.currentCategory }))
    </div>
</body>

<script>
    //document.getElementById("").addEventListener("click", showPopUp);
    function freeServicePopUp(jsonData) {
        document.getElementById("fspopup").style.opacity = 1;
        document.getElementById("fspopup").style.display = "block";
        document.getElementById("fspopup").style.top = 0;
        document.getElementById("fspopup").style.left = 0;
        document.getElementById("name").innerHTML = "<strong>Name:&nbsp;</strong>" + jsonData.Name;
        document.getElementById("address").innerHTML = "<strong>Address:&nbsp;  </strong>" + jsonData.Address;
        document.getElementById("suburb").innerHTML = "<strong>Suburb:&nbsp;  </strong>" + jsonData.Suburb;
        document.getElementById("phoneno").innerHTML = "<strong>Phone:&nbsp;  </strong>" + jsonData.Phone;
        if (document.getElementById("website").hasChildNodes)
        { document.getElementById("website").removeChild(document.getElementById("website").lastChild) }
        var a = document.createElement('a');
        var linkText = document.createTextNode(jsonData.Website);
        a.appendChild(linkText);
        a.title = jsonData.Website;
        a.href = "http://" + jsonData.Website;
        document.getElementById("website").appendChild(a);
        document.getElementById("tram").innerHTML = "<strong>Tram Routes:&nbsp;  </strong>" + jsonData.Tram_routes;
        document.getElementById("services").innerHTML = "<strong>Main Services:&nbsp;  </strong>" + jsonData.Category;
        document.getElementById("map").href = "/freeServices/Details/" + jsonData.service_Id;
    }

    function closepopup() {
        document.getElementById("fspopup").style.opacity = 0;
        document.getElementById("fspopup").style.display = "none";
    }
</script>
<script>
    var navi = document.getElementById("navigation-bar");
    window.onload = function myFunction() {
        document.getElementById("firstelement").style.marginTop = navi.offsetHeight + 10 + "px";
        document.getElementById("firstelement").style.display = "block";

    }
</script>