@model HomeForHomeless.Models.freeService

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/detailstyle.css" rel="stylesheet" />
<section id="about" class="about section-bg">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h3><span>Free Service Center Details</span></h3>
        </div>

        <div class="row">
            <div class="col-lg-6" data-aos="fade-right" data-aos-delay="100">
                <img src="~/Images/logo.png" class="img-fluid" alt="">
            </div>
            <div class="col-lg-6 pt-4 pt-lg-0 content d-flex flex-column justify-content-center" data-aos="fade-up" data-aos-delay="100">
                <ul>
                    <li>
                        <i class="bx bx-store-alt"></i>
                        <div>
                            <h5><strong>Service Center Name</strong></h5>
                            <p>@Html.DisplayFor(model => model.Name)
                            </p>
                        </div>
                    </li>
                    <li>
                        <i class="bx bx-store-alt"></i>
                        <div>
                            <h5><strong>Service Website</strong></h5>
                            <p>@Html.DisplayFor(model => model.Website)</p>
                        </div>
                    </li>
                    <li>
                        <i class="bx bx-store-alt"></i>
                        <div>
                            <h5><strong>Service Tram routes</strong></h5>
                            <p>@Html.DisplayFor(model => model.Tram_routes)</p>
                        </div>
                    </li>
                    <li>
                        <i class="bx bx-store-alt"></i>
                        <div>
                            <h5><strong>Service Category</strong></h5>
                            <p>@Html.DisplayFor(model => model.Category)</p>
                        </div>
                    </li>
                    <li>
                        <i class="bx bx-images"></i>
                        <div>
                            <h5><strong>Service Center Address</strong></h5>
                            <p>@Html.DisplayFor(model => model.Address)</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
    <!-- End details Section -->

