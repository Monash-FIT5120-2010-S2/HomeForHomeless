@using PagedList.Mvc
@model  HomeForHomeless.ViewModel.CharityList

@{
    ViewBag.Title = "VictoriaCharity"; }

<h2>Index</h2>

<body>
    <div class="page-title-section">
        <div class="container">
            <h1 class="page-title">Charity</h1>
        </div>
    </div>
    <div class="content-section" style="padding-top: 35px;">
        <p class="paragraph">Netflix and chill on highly efficient TVs</p><br />
        <form asp-action="Index" method="get" class="appliance-collection-search-bar w-form">
            <input type="search" class="appliance-collection-search w-input" maxlength="256" name="SearchString" value="@ViewData["currentFilter"]" placeholder="key word…" id="search" required="" autocomplete="off">
            <input type="submit" value="Search" class="appliancec-collection-search-but w-button">
        </form>
    </div>

    @* iterative code to display all the appliance in database in grids of cards.  *@

    <div class="section-3">
        <div class="w-layout-grid grid-3">
            @{int x = 0;}
            @if (Model != null)
            {
                foreach (var item in Model.Charities)
                {
                    x++;
                    <div class="appliance-card">

                        <p>
                            <button onclick="location.href='@Url.Action("Details", "VictoriaCharities",new { id = @item.charity_Id})'" type="button" class="appliance-card-but w-button" style="height:100px">
                                @item.charity_name
                            </button>
                        </p>
                    </div>
                }
            }
        </div>
    </div>

    <br>
    <br>

    @* code to display page count based on the data in the database. *@

    <div class="pagecount" style="margin:auto; text-align:center">
        Page @(Model.Charities.PageCount < Model.Charities.PageNumber ? 0 : Model.Charities.PageNumber)
        of @Model.Charities.PageCount   @Html.PagedListPager(Model.Charities, page => Url.Action("Index", new { page, currentfilter = ViewBag.currentfilter }))
    </div>
</body>
