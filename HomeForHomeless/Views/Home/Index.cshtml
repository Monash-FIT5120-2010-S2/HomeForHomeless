@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Envision a Green Life</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <!-- Image Carousel -->
    <div id="carousel" class="carousel slide" data-ride="carousel" data-interval="6500">

        <!-- Carousel Content -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/charity.jpg" alt="" class="w-100">
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-8 bg-custom">
                                <h1>need help?</h1>
                                <div class="border-top border-primary w-50"></div>
                                <h3>find solutions</h3>
                                <a href="#" class="btn btn-primary btn-lg">Find Out</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="carousel-item ">
                <img src="~/Images/volunteer.jpg" alt="" class="w-100">
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-8 bg-custom">
                                <p class="lead">Want to help? Unsure know where to start? Let us show you.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="carousel-item ">
                <img src="~/Images/hand.jpg" alt="" class="w-100">
            </div>

        </div>
    </div>

    <!-- End Carousel Content -->
    <!-- Previous & Next Buttons -->
    <a href="#carousel" class="carousel-control-prev" role="button" data-slide="prev">
        <span class="fas fa-chevron-left fa-2x"></span>
    </a>

    <a href="#carousel" class="carousel-control-next" role="button" data-slide="next">
        <span class="fas fa-chevron-right fa-2x"></span>
    </a>

    <div class="shop-local-section" style="margin-top:30px;">
        <div class="container shop-local-container">
            <div class="shop-local-wrapper">
                <div class="shop-local-left"></div>
                <div class="shop-local-right">
                    <div class="shop-local-content-wrapper">
                        <p>
                            Rate of Homelessness has increased steadily over the years. In Victoria, Homelessness is a
                            preventable things. We are here to help those in need and guide those who wants to end Homelessness
                            in Victoria.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- End Previous & Next Buttons -->
    <!-- Script Source Files -->
    <script src="~/Scripts/all.min.js"></script>
    <!-- jQuery -->
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap 4.5 JS -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Popper JS -->
    <script src="~/Scripts/esm/popper.min.js"></script>
    <!-- Font Awesome -->
    <script src="~/Scripts/all.min.js"></script>

    <!-- End Script Source Files -->



</body>
</html>